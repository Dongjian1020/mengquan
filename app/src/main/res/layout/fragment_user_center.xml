<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="@drawable/landscape_slideplay_title_bg"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/photo"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:textColor="@color/_ffffff"
            android:layout_marginBottom="50dp"
            android:text="点击登录"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.andexert.library.RippleView
            android:id="@+id/rect_follow"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_zoom="true">

            <TextView
                android:id="@+id/rect_child1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="我的关注"
                />
            <View
                android:id="@+id/arrow1"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow">

            </View>

        </com.andexert.library.RippleView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/_d1d1d1">

        </View>
        <com.andexert.library.RippleView
            android:id="@+id/rect_collection"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_zoom="true">

            <TextView
                android:id="@+id/rect_child2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="我的收藏"
                />
            <View
                android:id="@+id/arrow2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow">

            </View>

        </com.andexert.library.RippleView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/_d1d1d1">

        </View>
        <com.andexert.library.RippleView
            android:id="@+id/rect_publish"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_zoom="true">

            <TextView
                android:id="@+id/rect_child3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="我的发布"
                />
            <View
                android:id="@+id/arrow3"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow">

            </View>

        </com.andexert.library.RippleView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/_d1d1d1">

        </View>
        <com.andexert.library.RippleView
            android:id="@+id/rect_feedback"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_zoom="true">

            <TextView
                android:id="@+id/rect_child4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="用户反馈"
                />
            <View
                android:id="@+id/arrow4"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow">

            </View>

        </com.andexert.library.RippleView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/_d1d1d1">

        </View>
        <com.andexert.library.RippleView
            android:id="@+id/rect_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_zoom="true">

            <TextView
                android:id="@+id/rect_child5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="个人设置"
                />
            <View
                android:id="@+id/arrow5"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow">

            </View>

        </com.andexert.library.RippleView>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/_d1d1d1">

        </View>
        <com.andexert.library.RippleView
            android:id="@+id/rect_update"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            ripple:rv_type="rectangle"
            android:background="@drawable/selector_row"
            ripple:rv_zoom="true">

            <TextView
                android:id="@+id/rect_child6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:textColor="#000000"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="应用更新"
                />
            <View
                android:id="@+id/arrow6"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/icon_right_arrow">

            </View>

        </com.andexert.library.RippleView>

    </LinearLayout>
</LinearLayout>